generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id Int @id @default(autoincrement())
  userName String @unique
  displayName String @default("Mysterious Adventurer")
  profile String @default("I'm here to kick butt and chew bubblegum... and I'm all out of butt.")

  questers Quester[]
}

model Quester {
  id Int @id @default(autoincrement())
  userId Int
  name String
  textureData String 

  user User @relation(fields: [userId], references: [id])
}